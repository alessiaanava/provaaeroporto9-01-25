SELECT * FROM "table-name";
CREATE TABLE IF NOT EXISTS voli (
    id_aereo TEXT PRIMARY KEY,          -- Identificativo univoco dell'aereo
    orario_partenza TEXT NOT NULL,      -- Data e ora di partenza del volo
    ora_arrivo TEXT NOT NULL,           -- Data e ora di arrivo del volo
    compagnia_aerea TEXT NOT NULL,      -- Nome della compagnia aerea
    numero_passeggeri INTEGER NOT NULL  -- Numero di passeggeri a bordo
);
